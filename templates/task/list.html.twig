{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    {% if tasks | length >= 1 %}
        <a href="{{ path('task_create') }}" class="btn btn-info">Créer une tâche</a>
    {% endif %}
    <div class="row mt-3">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="float-right">
                        {% if task.isDone %}<span><i class="fas fa-check"  style="color:green" ></i></span>{% else %}<span><i class="fas fa-times"></i></span>{% endif %}
                    </h4>
                    <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                    <p>{{ task.content }}</p>
                    <p>Auteur :<th> {{ task.user.prenom|raw}}</th>
                               <th> {{- task.user.nom }} </th></p>
                     <p>Date : {{ task.createdAt.format('d/m/Y') }}</p>
                </div>
            </div>

            <div class="text-center mt-2 mb-2">
                <a href="{{ path('task_toggle', {'id' : task.id }) }}" class="btn btn-success btn-sm">
                    {% if not task.isDone %}<i class="fas fa-check"></i>{% else %}<i class="fas fa-times"></i>{% endif %}
                </a>
                <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm text-white">
                    <i class="fas fa-edit"></i>
                </a>
                {% if app.user == task.user or app.user.roles[0] == "ROLE_ADMIN" %}

                    <a href="{{ path('task_delete', {'id' : task.id }) }}" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
        {% if tasks | length == 0 %}
            <div class="alert alert-warning mb-0" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
